<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:background="@color/white">

    <Button
        android:id="@+id/call_police_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:text="@string/call_police_helpline"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#E91E63"/>

    <Button
        android:id="@+id/call_women_helpline_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:text="@string/women_helpline"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/call_ambulance_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:text="@string/call_ambulance"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="30dp"/>



    <Button
        android:id="@+id/call_Cyber_helpline_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:text="Cyber Crime Helpline"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="30dp"/>

</LinearLayout>
